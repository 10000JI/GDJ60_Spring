<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s1.board.notice.NoticeDAO">
  
  	<sql id="noticeCondition">
  		<where>
  			<if test="kind=='title'">
  				TITLE Like '%' || #{search} || '%'
  			</if>
  			<if test="kind=='writer'">
  				WRITER Like '%' || #{search} || '%'
  			</if>
  		</where>
  	</sql>
  
  	<select id="getTotalCount" resultType="Long" parameterType="Pager">
  		SELECT COUNT(NUM) FROM NOTICE
  		<include refid="noticeCondition"></include>
  	</select>
  	
  	<select id="getBoardList" resultType="BoardDTO" parameterType="Pager">
  		SELECT * FROM
  		(	
  			SELECT ROWNUM R, C.* FROM
  				(	SELECT * FROM NOTICE
					<include refid="commentCondition"></include>
					ORDER BY NUM DESC
				) C
		)
		WHERE R BETWEEN #{startRow} AND #{lastRow} 
  	</select>
  
  <!-- 리스트할 땐 contents빼고 나머지 컬럼만 가져올 수 있게 -->
  </mapper>